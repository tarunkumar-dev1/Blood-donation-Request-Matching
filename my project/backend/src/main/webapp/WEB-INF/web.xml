<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <display-name>Blood Donation Backend</display-name>

    <!-- CORS Filter for handling cross-origin requests -->
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>com.example.blood.servlet.CorsFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <!-- Security Headers Filter -->
    <filter>
        <filter-name>SecurityHeadersFilter</filter-name>
        <filter-class>com.example.blood.servlet.SecurityHeadersFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>SecurityHeadersFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>com.example.blood.servlet.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/api/auth</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DonorServlet</servlet-name>
        <servlet-class>com.example.blood.servlet.DonorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DonorServlet</servlet-name>
        <url-pattern>/api/donors</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MatchServlet</servlet-name>
        <servlet-class>com.example.blood.servlet.MatchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MatchServlet</servlet-name>
        <url-pattern>/api/matches</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ContactServlet</servlet-name>
        <servlet-class>com.example.blood.servlet.ContactServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContactServlet</servlet-name>
        <url-pattern>/api/contact</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HealthServlet</servlet-name>
        <servlet-class>com.example.blood.servlet.HealthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HealthServlet</servlet-name>
        <url-pattern>/api/health</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StatsServlet</servlet-name>
        <servlet-class>com.example.blood.servlet.StatsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatsServlet</servlet-name>
        <url-pattern>/api/stats</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>com.example.blood.servlet.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/api/admin/matches</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/api/admin/matches/approve</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/api/admin/matches/complete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>com.example.blood.servlet.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/api/admin/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/api/admin/check-session</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ApprovalServlet</servlet-name>
        <servlet-class>com.example.blood.servlet.ApprovalServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ApprovalServlet</servlet-name>
        <url-pattern>/api/admin/approvals</url-pattern>
    </servlet-mapping>
</web-app>
